<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.About">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_about"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:background="@drawable/bg_profil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/toolbar_dosen"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:background="@drawable/bg_lihat"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_dosen"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_dosen"
            android:elevation="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/bg_dosen"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ci_dosen"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:src="@drawable/social"
            app:layout_constraintTop_toTopOf="@id/bg_dosen"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_dosen"
            app:layout_constraintLeft_toLeftOf="@id/bg_dosen"
            app:layout_constraintRight_toRightOf="@id/bg_dosen"
            android:elevation="70dp"
            android:layout_marginBottom="70dp"
            />
        <View
            android:layout_width="137dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toBottomOf="@+id/ci_dosen"
            android:elevation="70dp"
            app:layout_constraintLeft_toLeftOf="@id/ci_dosen"
            app:layout_constraintRight_toRightOf="@id/ci_dosen"
            android:layout_marginTop="8dp"
            android:id="@+id/view_nohp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0895803241439"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/view_nohp"
            app:layout_constraintLeft_toLeftOf="@id/view_nohp"
            app:layout_constraintRight_toRightOf="@id/view_nohp"
            android:elevation="70dp"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            android:id="@+id/tv_nohp_informatika"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yusril Anwar"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/view_nohp"
            app:layout_constraintLeft_toLeftOf="@id/view_nohp"
            app:layout_constraintRight_toRightOf="@id/view_nohp"
            android:elevation="70dp"
            android:id="@+id/tv_nama_dosen_informatika"
            android:layout_marginTop="8dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GitHub : yusril86"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_nama_dosen_informatika"
            app:layout_constraintLeft_toLeftOf="@id/view_nohp"
            app:layout_constraintRight_toRightOf="@id/view_nohp"
            android:elevation="70dp"
            android:id="@+id/tv_github"
            android:layout_marginTop="8dp"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_telp"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_lihat"
            app:layout_constraintTop_toBottomOf="@id/bg_dosen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            >

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/communications"
                app:layout_constraintTop_toTopOf="@+id/bg_telp"
                app:layout_constraintLeft_toLeftOf="@+id/bg_telp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:id="@+id/btn_telp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0895803241439"
                app:layout_constraintTop_toBottomOf="@id/btn_telp"
                app:layout_constraintLeft_toLeftOf="@id/btn_telp"
                app:layout_constraintRight_toRightOf="@id/btn_telp"
                android:textSize="15sp"
                android:id="@+id/tv_notelp"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telpon"
                app:layout_constraintTop_toBottomOf="@id/tv_notelp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_wa"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_lihat"
            app:layout_constraintTop_toBottomOf="@id/bg_telp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            >

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/technology"
                app:layout_constraintTop_toTopOf="@+id/bg_wa"
                app:layout_constraintLeft_toLeftOf="@+id/bg_wa"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:id="@+id/btn_wa"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0895803241439"
                app:layout_constraintTop_toBottomOf="@id/btn_wa"
                app:layout_constraintLeft_toLeftOf="@id/btn_wa"
                app:layout_constraintRight_toRightOf="@id/btn_wa"
                android:textSize="15sp"
                android:id="@+id/tv_wa"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whastsaap"
                app:layout_constraintTop_toBottomOf="@id/tv_wa"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_gmail"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/bg_lihat"
            app:layout_constraintTop_toBottomOf="@id/bg_wa"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            >

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_email_black"
                app:layout_constraintTop_toTopOf="@+id/bg_gmail"
                app:layout_constraintLeft_toLeftOf="@+id/bg_gmail"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                android:id="@+id/btn_gmail"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yusril886@gmail.com"
                app:layout_constraintTop_toBottomOf="@id/btn_gmail"
                app:layout_constraintLeft_toLeftOf="@id/btn_gmail"
                app:layout_constraintRight_toRightOf="@id/btn_gmail"
                android:textSize="15sp"
                android:id="@+id/tv_gmail"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail"
                app:layout_constraintTop_toBottomOf="@id/tv_gmail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>